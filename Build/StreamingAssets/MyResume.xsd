<?xml version="1.0" encoding="utf-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="Dialogues">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Dialogue" maxOccurs="unbounded" minOccurs="0">
          <xs:complexType mixed="true">
            <xs:sequence>
              <xs:element name="Response" minOccurs="0">
                <xs:complexType>
                  <xs:simpleContent>
                    <xs:extension base="xs:string">
                      <xs:attribute type="xs:string" name="next_id" />
                      <xs:attribute type="xs:string" name="text" />
                    </xs:extension>
                  </xs:simpleContent>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
            <xs:attribute type="xs:string" name="id" use="optional" />
            <xs:attribute type="xs:string" name="speaker" use="optional" />
            <xs:attribute type="xs:string" name="next_id" use="optional" />
            <xs:attribute type="xs:string" name="image_id" use="optional" />
            <xs:attribute type="xs:string" name="image_pos" use="optional" />
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>